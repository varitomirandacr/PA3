<!DOCTYPE html>
    <html lang="en" data-bs-theme="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>@ViewBag.Title - Advanced Programming</title>
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")		
	</head>
	<body class="min-vh-100 d-flex flex-column bg-dark text-light">

		@if (User?.Identity != null && User.Identity.IsAuthenticated)
		{
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
				<div class="container">
					@Html.ActionLink("AP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
					<button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
						<ul class="navbar-nav flex-grow-1">
							<li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Entities
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>@Html.ActionLink("Products", "Index", "Products", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Components", "Index", "Component", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Notifications", "Index", "Notification", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Roles", "Index", "Role", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Suppliers", "Index", "Supplier", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Tasks", "Index", "Task", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Users", "Index", "User", new { area = "" }, new { @class = "dropdown-item" })</li>
									<li>@Html.ActionLink("Inventory", "Index", "Inventory", new { area = "" }, new { @class = "dropdown-item" })</li>

								</ul>
							</li>
							@Html.Partial("_LoginPartial")
						</ul>
					</div>
				</div>
			</nav>
		}
	<div class="container body-content">
		@RenderBody()
		
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Advanced Programming</p>
		</footer>
	</div>

			@Scripts.Render("~/bundles/jquery")
			@Scripts.Render("~/bundles/bootstrap")
			@RenderSection("scripts", required: false)
			@Scripts.Render("https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
			@Scripts.Render("https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js")
		</body>
</html>
